body{
    margin:0px;
    font-family: Roboto, sans-serif;
}
header{
    box-shadow: 0 0 .5rem rgba(0,0,0,.25);
  
}
header  img{
    width: 150px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 15px 0px;
}

.loca{
    display: flex;
    justify-content: center;
    padding: 1.25rem 1rem;
    background-color: #f3f3f3;
    font-size: 1rem;
    
}
.loca i{
    margin-right: 15px;
}
.loca span{
    opacity: 0.8;
    font-weight: 700;
    
}
.exploration{
    padding: 15px 36px;
    text-align: center;
   
}
.exploration h3{
    font-weight: 700;
    font-size: 1.5em;
    margin-bottom:15px;
}
.exploration p{
    opacity: 0.5;
    margin-bottom:26px;
}
button{
    border: 0;
    padding: .75rem 1.5rem;
    font-weight: 500;
    font-size: 1.1rem;
    border-radius: 100px;
    color: #fff;
    background-color: #686868;
    background-image: linear-gradient(0deg,rgba(147,86,220,.9),rgba(255,121,218,.9));
    cursor: pointer;
}
ol{
    counter-reset: listButton;
}
li::before{
    counter-increment: listButton;
    content: counters(listButton,".") " ";
    background-color: #9356DC;
    border-radius: 30px;
    display:flex;
    height: 30px;
    width: 30px;
    justify-content: center;
    position: absolute;
    margin-right: 15px;
    align-items: center;
    left: 0.75rem;;
   
}
li{
    list-style-type: none;
    display:flex;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    ;
}
.fontionnement{
padding: 1.5rem;
}
